<p id="notice"><%= notice %></p>

<div class="searchform">
	<%= form_tag(user_path(@user), :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
      <button class="btn" type="submit"><i class="icon-search">Search</i></button>
    </div>
  <% end %>
</div>


	<% if @search_results %>
		<% @search_results.each do |result| %>
			<p> <%= result[0] %> <%= result[1].join(' -> ') %></p>
		<% end %>
	<% end %>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Website short:</strong>
  <%= @user.website_url %>
</p>

<p>
  <strong>Short url:</strong>
  <%= @user.short_url %>
</p>

<p>
	<%= form_for @user.friendships.new do |f| %>
		<%= f.hidden_field :friender_id, value: @user.id %>
		<%= f.select(:friended_id, @user.options_for_friends ) %>
		<%= f.submit %>
	<% end %>
</p>

<p class="headings" >
	<h4>Website Headings:</h4>
	<% @user.headings.each do |heading| %>
		<p class="heading.type" > <%= heading.content %> </p>
	<% end %>
</p>

<div class="friends" >
	<h4>Friends:</h4>
	<% @user.friends.each do |friend| %>
		<p class="friend" > <%= friend.name %> <%= link_to friend.website_url, friend.website_url, target: 'blank' %></p>
	<% end %>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
